<div data-behavior="<%= sidebarBehavior %>" class="search-tools-col hide">
    <div class="tools-wrap">
        <section class="tools-section tools-section-all">
            <div class="search-wrap">
                <input class="search-ipt" type="text" placeholder="find somethingâ€¦">
                <i class="icon-search icon"></i>
                <i class="icon-close icon "></i>
            </div>
            <div class="widget tagcloud search-tag">
                <ul class="article-tag-list">
                    <% site.tags.forEach(function(tag, i){ %>
                    <li class="article-tag-list-item">
                        <a class="js-tag color<%= tag.name.length % 5 + 1 %>"><%-tag.name%></a>
                    </li>
                    <% }) %>
                    <div class="clearfix"></div>
                </ul>
            </div>
            <p class="results-count hide"></p>
            <ul class="search-result-ul">
                <% site.posts.each(function(post) { %>
                    <%- partial('_partial/search-result-list', {post: post}) %>
                <% }) %>
            </ul>
        </section>
    </div>
</div>
